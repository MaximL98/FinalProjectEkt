<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EktProductFormController">

   <children>
      <BorderPane fx:id="borderPane" prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(from 0px 0px to 0px 1500px, pink, yellow);">
         <bottom>
            <Pane prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnBack" layoutX="5.0" layoutY="5.0" mnemonicParsing="false" onAction="#getBtnBack" prefHeight="39.0" prefWidth="168.0" style="-fx-background-color: transparent; -fx-background-radius: 50; -fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 2;" text="BACK">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </bottom>
         <top>
            <Pane fx:id="topPane" maxWidth="800.0" prefHeight="150.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="120.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/TheBetterLogo.png" />
                     </image>
                  </ImageView>
                  <Text fx:id="txtCategoryName" layoutX="208.0" layoutY="75.0" strokeType="OUTSIDE" strokeWidth="0.0" text="&quot;category name&quot; Products">
                     <font>
                        <Font name="Wingdings 2" size="36.0" />
                     </font>
                  </Text>
                  <Button fx:id="btnCart" layoutX="643.0" layoutY="29.0" mnemonicParsing="false" onAction="#getBtnCart" prefHeight="70.0" prefWidth="134.0" style="-fx-background-radius: 200; -fx-border-color: black; -fx-border-width: 2; -fx-background-color: transparent; -fx-border-radius: 300;" text="      CART">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Button>
                  <Label fx:id="txtNumberOfItemsInCart" alignment="CENTER" layoutX="680.0" layoutY="45.0" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #a7f8a8; -fx-background-radius: 200; -fx-opacity: 0.75;" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
