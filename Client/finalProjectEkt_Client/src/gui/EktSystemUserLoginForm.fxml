            <Text layoutX="339.0" layoutY="247.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login" textAlignment="CENTER">
               <font>
                  <Font name="OpenSymbol" size="44.0" />
               </font>
            </Text>
            <TextField fx:id="txtUsername" layoutX="288.0" layoutY="297.0" prefHeight="42.0" prefWidth="316.0" promptText="username">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPassword" layoutX="288.0" layoutY="390.0" onAction="#onEnter" prefHeight="42.0" prefWidth="316.0" promptText="password">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <Button fx:id="btnLogin" layoutX="376.0" layoutY="487.0" mnemonicParsing="false" onAction="#getBtnLogin" prefHeight="51.0" prefWidth="140.0" text="Login">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="RIGHT" layoutX="246.0" layoutY="680.0" prefHeight="79.0" prefWidth="334.0" text="test" textAlignment="CENTER" visible="false" />
