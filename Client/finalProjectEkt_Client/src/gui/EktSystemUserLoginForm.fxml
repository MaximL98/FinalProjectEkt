<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EktSystemUserLoginController">
   <children>
      <Pane prefHeight="800.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="166.0" fitWidth="248.0" layoutY="289.0" pickOnBounds="true" preserveRatio="true">
               <image>
