<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane prefHeight="800.0" prefWidth="800.0">
         <children>
            <Text fx:id="WelcomeInventoryWorkerText" layoutX="326.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome, Inventory Worker" />
            <Text layoutX="307.0" layoutY="90.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Insert Machine inventory to update:" />
            <TableView fx:id="tblInventory" layoutX="150.0" layoutY="150.0" prefHeight="550.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="colItem" prefWidth="144.0" text="Item" />
                <TableColumn fx:id="colQuantity" minWidth="0.0" prefWidth="116.0" text="Quantity" />
                  <TableColumn fx:id="colRestockAmount" prefWidth="139.0" text="Restock Amount" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <ComboBox fx:id="cmbChooseMachine" layoutX="325.0" layoutY="106.0" prefWidth="150.0" />
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="650.0" layoutY="334.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/3121792.png" />
               </image>
            </ImageView>
            <Button fx:id="btnUpdate" layoutX="374.0" layoutY="708.0" mnemonicParsing="false" text="Update" />
            <Button fx:id="btnLogout" layoutX="14.0" layoutY="761.0" mnemonicParsing="false" text="Logout" />
         </children>
      </Pane>
   </children>
</VBox>
