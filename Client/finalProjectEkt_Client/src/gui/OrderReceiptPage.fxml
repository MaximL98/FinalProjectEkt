<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrderReceiptPageController">
   <children>
      <Pane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(from 0px 0px to 0px 1800px,#e6e6fa , INDIGO);">
         <children>
            <Text fx:id="txtOrderNumber" layoutX="95.0" layoutY="316.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order number: XXXXXXX">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font></Text>
            <Text fx:id="txtOrderTotal" layoutX="15.0" layoutY="339.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order total: XXXX">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font></Text>
            <Text fx:id="txtCustomerEmail" layoutX="89.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Order information was sent to&#10;XXXXX@XXXX.COM" textAlignment="CENTER">
               <font>
                  <Font name="Berlin Sans FB" size="18.0" />
               </font></Text>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="125.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/checkmark%20(1).png" />
               </image>
            </ImageView>
            <Button fx:id="btnLogout" layoutX="14.0" layoutY="344.0" mnemonicParsing="false" onAction="#getBtnLogout" stylesheets="@buttonCSS.css" text="Logout" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font></Button>
            <Button fx:id="btnBack" layoutX="288.0" layoutY="344.0" mnemonicParsing="false" onAction="#getBtnBack" stylesheets="@buttonCSS.css" text="Catalog" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font></Button>
            <Text layoutX="73.0" layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ORDER COMPLETE!" underline="true">
               <font>
                  <Font name="Berlin Sans FB" size="30.0" />
               </font>
            </Text>
            <Text fx:id="txtBillingDate" layoutX="146.0" layoutY="293.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Billing Date: ">
               <font>
                  <Font name="Berlin Sans FB" size="20.0" />
               </font>
            </Text>
         </children>
      </Pane>
   </children>
</VBox>
