         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Text>
				<DatePicker fx:id="dpPromotionEndDate" layoutX="450.0" layoutY="456.0" prefHeight="50.0" prefWidth="300.0" promptText="Promotion end date" />
				<Button fx:id="btnCreatePromotion" layoutX="291.0" layoutY="744.0" onAction="#createPromotionHandler" stylesheets="@buttonCSS.css" text="CREATE PROMOTION" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Button>
				<Button fx:id="btnGoBack" layoutX="14.0" layoutY="744.0" onAction="#goBackHandler" stylesheets="@buttonCSS.css" text="BACK" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Button>
				<Label layoutX="223.0" layoutY="120.0" text="CREATE A NEW PROMOTION">
         <font>
            <Font name="Berlin Sans FB" size="28.0" />
         </font>
      </Label>
      <Text layoutX="53.0" layoutY="453.0" strokeType="OUTSIDE" strokeWidth="0.0" text="DISCOUNT PERCENTAGE">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Text>
      <Text fx:id="txtDiscountError" fill="RED" layoutX="80.0" layoutY="528.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PLEASE PROVIDE A VALUE OF 0-100" visible="false">
         <font>
            <Font name="Berlin Sans FB" size="15.0" />
         </font>
      </Text>
	</children>
</Pane>
