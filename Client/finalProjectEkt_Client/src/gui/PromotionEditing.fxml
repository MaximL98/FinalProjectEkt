<Pane prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(from 0px 0px to 0px 1800px,#e6e6fa , INDIGO);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PromotionEditingController">
	<children>
      <Pane prefHeight="120.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="120.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/TheBetterLogo.png" />
               </image>
            </ImageView>
            <Text layoutX="178.0" layoutY="73.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome back &quot;Sales Manager&quot;">
               <font>
                  <Font name="Berlin Sans FB" size="36.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Text layoutX="50.0" layoutY="218.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PROMOTION NAME">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Text>
				<TextField fx:id="txtPromotionName" layoutX="50.0" layoutY="225.0" prefHeight="50.0" prefWidth="300.0" stylesheets="@textfieldCSS.css" />
      <Text layoutX="450.0" layoutY="219.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PROMOTION DESCRIPTION">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Text>
				<TextField fx:id="txtPromotionDescription" layoutX="450.0" layoutY="225.0" prefHeight="50.0" prefWidth="300.0" stylesheets="@textfieldCSS.css" />
      <Text layoutX="53.0" layoutY="341.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LOCATION NAME">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Text>
				<ComboBox fx:id="cbLocation" layoutX="50.0" layoutY="345.0" prefHeight="50.0" prefWidth="300.0" promptText="Location" stylesheets="@comboboxCSS.css" />
				<TextField fx:id="txtDiscountPercentage" layoutX="50.0" layoutY="457.0" prefHeight="50.0" prefWidth="300.0" stylesheets="@textfieldCSS.css" />
      <Text layoutX="450.0" layoutY="340.0" strokeType="OUTSIDE" strokeWidth="0.0" text="START DATE">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Text>
				<DatePicker fx:id="dpPromotionStartDate" layoutX="450.0" layoutY="344.0" prefHeight="50.0" prefWidth="300.0" promptText="Promotion start date" />
