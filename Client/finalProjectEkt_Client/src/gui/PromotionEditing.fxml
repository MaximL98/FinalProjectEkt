<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<Pane prefHeight="800.0" prefWidth="800.0"
	xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.PromotionEditingController">
	<children>
		<VBox>
			<children>
				<Label text="Create New Promotion" />
				<TextField fx:id="txtPromotionName"
					promptText="Promotion name" />
				<TextField fx:id="txtPromotionDescription"
					promptText="Promotion description" />
				<TextField fx:id="txtProductId" promptText="Product ID" />
				<ComboBox fx:id="cbLocation" promptText="Location" />
				<TextField fx:id="txtDiscountPercentage"
					promptText="Discount percentage" />
				<DatePicker fx:id="dpPromotionStartDate"
					promptText="Promotion start date" />
				<DatePicker fx:id="dpPromotionEndDate"
					promptText="Promotion end date" />
				<Button fx:id="btnCreatePromotion" text="Create promotion"
					onAction="#createPromotionHandler" />
				<Button fx:id="btnGoBack" text="Go back"
					onAction="#goBackHandler" />

			</children>
		</VBox>
	</children>
</Pane>
