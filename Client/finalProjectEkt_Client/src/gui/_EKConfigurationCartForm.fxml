<AnchorPane fx:id="anchorPane" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ek_configuration._EKConfigurationCartController">
   <children>
      <BorderPane fx:id="borderPane" prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(from -200px 0px to 0px 1500px,#e6e6fa , INDIGO);">
         <top>
            <Pane prefHeight="120.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="120.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/TheBetterLogo.png" />
                     </image>
                  </ImageView>
                  <Text layoutX="307.0" layoutY="72.0" strokeType="OUTSIDE" strokeWidth="0.0" text="YOUR CART">
                     <font>
                        <Font name="Berlin Sans FB" size="36.0" />
                     </font>
                  </Text>
                  <Button fx:id="btnCancelOrder" layoutX="638.0" layoutY="41.0" mnemonicParsing="false" onAction="#getBtnCancelOrder" prefHeight="20.0" prefWidth="148.0" style="-fx-background-color: #f28484; -fx-border-color: crimson; -fx-border-width: 3;" text="CANCEL ORDER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </top>
