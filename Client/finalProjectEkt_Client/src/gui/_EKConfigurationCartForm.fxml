                  </Button>
                  <Button fx:id="btnOrder" layoutX="601.0" layoutY="41.0" mnemonicParsing="false" onAction="#getBtnOrder" prefHeight="45.0" prefWidth="185.0" style="-fx-background-color: #b6e194; -fx-border-color: green; -fx-border-width: 3;" text="ORDER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Text fx:id="txtTotalPrice" layoutX="300.0" layoutY="49.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CART TOTAL: 0$" y="25.0">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Text>
               </children>
            </Pane>
         </bottom>
      </BorderPane>
   </children>
